@model OrderHistoryListViewModel
@{
    ViewBag.Title = "История заказов";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
    var currentDate = DateTime.Today;
    var start = currentDate.AddDays(-7);
    var end = currentDate;
}

    <form asp-action="FilterHistory" data-ajax="true" data-ajax-method="GET" data-ajax-loading="#id-processIcon"
          data-ajax-update="#history-list" data-ajax-mode="replace">
        <div class="margined-top row">
            <div class="form-group col-xs-7">
                <div class="input-daterange input-group" id="datepicker">
                    <input type="date" class="form-control" name="start" value="@start.ToString("yyyy-MM-dd")" required />
                    <span class="input-group-addon">-</span>
                    <input type="date" class="form-control" name="end" value="@end.ToString("yyyy-MM-dd")" required />
                </div>
            </div>
            <div class="form-group col-xs-5 text-right">
                <input type="submit" value="Выбрать" class="btn btn-default pl-5 pr-5" />
            </div>
        </div>
    </form>
<div id="history-list">
    @await Html.PartialAsync("_HistoryList", Model)
</div>