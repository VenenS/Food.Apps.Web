@model MenuViewModel
@{
    ViewData.Add("BanketMenuId", Model.Banket.MenuId);
    ViewBag.Title = $"Банкетное меню";
}
@await Html.PartialAsync("_Navigator")
@if (Model.Banket != null)
{
    <div class="row">
        <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12 left-sidebar">
            <div class="fixed-sidebar" data-spy="affix" data-offset-top="380">
                @await Html.PartialAsync("_LeftSideBar", Model, ViewData)
            </div>
        </div>
        <div class="col-lg-6 col-md-8 col-sm-8 col-xs-12 main">
            <div id="list" class="menu" style="width: 100%">
                @if (TempData.ContainsKey("Error") || TempData.ContainsKey("Success"))
                {
                    <div class="card margined-top">
                        <div class="card-body">
                            <div class="card-content">
                                <h4>@(TempData["Error"] ?? TempData["Success"])</h4>
                            </div>
                        </div>
                    </div>
                }
                @await Html.PartialAsync("_Banket", Model.Banket)
                @await Html.PartialAsync("~/Views/Cafe/_Menu.cshtml", Model.Menu)
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12 side-bar">
            <div class="fixed-cart" data-spy="affix" data-offset-top="380">
                @await Html.PartialAsync("_SideBar")
            </div>
        </div>
    </div>
}


