@model BanketModel

<div class="card margined-top">
    <div class="card-body">
        <div class="card-content">
            <div class="row">
                <div class="col-sm-4 col-xs-12">
                    <div class="col-xs-12">
                        <strong>Компания</strong>
                    </div>
                    <div class="col-xs-12">
                        @if (Model.Company != null)
                        {
                            @Model.Company.Name
                        }
                    </div>
                </div>
                <div class="col-sm-4 col-xs-12">
                    <div class="col-xs-12">
                        <strong>Период заказа</strong>
                    </div>
                    <div class="col-xs-12">
                        @Model.OrderStartDate.ToShortDateString() - @Model.OrderEndDate.ToShortDateString()
                    </div>
                </div>
                <div class="col-sm-4 col-xs-12">
                    <div class="col-xs-12">
                        <strong>Дата проведения</strong>
                    </div>
                    <div class="col-xs-12">
                        @Model.EventDate.ToShortDateString()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>