@model MessageViewModel

<div class="alert alert-@Model.Type alert-dismissible display-flex" role="alert">
    <div style="width: 100%">@Model.Text</div>
    <div>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>