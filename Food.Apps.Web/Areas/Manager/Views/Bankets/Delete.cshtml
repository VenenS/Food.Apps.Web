@model BanketModel

@{
    ViewBag.Title = "Удаление банкета";
}

<div class="main wide-rigth content">
    <div class="panel panel-default">
        <div class="panel-body">
            @using (Html.BeginRouteForm("ManagerCafe", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)
                if (TempData.ContainsKey("Result"))
                {
                    <div class="alert alert-danger">
                        @TempData["Result"]
                    </div>
                }
                <h3>Вы уверены, что хотите удалить выбранный банкет?</h3>
                <div>
                    <hr/>
                    <dl class="dl-horizontal">
                        <dt>
                            Компания
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Company.Name)
                        </dd>

                        <dt>
                            Дата проведения банкета
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.EventDate)
                        </dd>
                    </dl>
                </div>
                <div class="form-group">
                    <input type="submit" value="Удалить" class="btn btn-danger"/> |
                    @Html.RouteLink("Назад к списку", "ManagerCafe", new {action = "Index", controller = "Bankets"})
                </div>
            }
        </div>
    </div>
</div>