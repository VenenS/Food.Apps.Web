@model ITWebNet.Food.Site.Models.MessageViewModel

<div class="alert alert-@Model.Type alert-dismissible" role="alert" style="display:flex;">
    <div style="width: 100%">@Model.Text</div>
    <div>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>