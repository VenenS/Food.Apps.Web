@model List<Food.Services.Contracts.ReportUserOrdersModel>

<div class="card" id="company-orders">
    <div class="card-header row">
        <b class="col-xs-6">Сотрудники</b>
        <b class="col-xs-6">Общая сумма заказов за период:  руб.</b>
    </div>
    <table class="table table-striped table-bordered table-responsive table-head-center">
        <thead>
            <tr>
                <th>ФИО сотрудника</th>
                <th>Дата начала периода</th>
                <th>Дата окончание периода</th>
                <th>Стоимость заказов</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                @await Html.PartialAsync("_EmployeeReportsItem", item)
            }
        </tbody>
    </table>
    <div class="wip" id="processIcon">
        <i class="fa fa-spinner fa-2_5x fa-pulse"></i>
    </div>
</div>