 @model List<ITWebNet.Food.Site.Models.CompanyOrderModel>

<div class="card row col-lg-12 mb-4 pt-2 pr-3 pl-3" id="company-orders">
  <div class="card-header row">
      <b class="col-xs-6">Заказы</b>
      <b class="col-xs-6">Общая сумма заказов за период: @Model.Sum(m => m.TotalPrice) руб.</b>
  </div>
    <table class="table table-striped table-bordered table-responsive table-head-center" >
        <thead>
            <tr>
                <th>№ заказа</th>
                <th>Дата заказа</th>
                <th>Время доставки</th>
                <th>Кафе</th>
                <th>Стоимость заказов</th>
                <th>Статус</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            @await Html.PartialAsync("_CompanyReportsItem", item)
        }
        </tbody>
    </table>
    <div class="wip" id="processIcon">
        <i class="fa fa-spinner fa-2_5x fa-pulse"></i>
    </div>
</div>