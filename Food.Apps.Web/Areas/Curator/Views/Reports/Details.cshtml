@model ITWebNet.Food.Site.Models.ReportDetailsModel
@if (Model.CompanyOrder != null)
{
  ViewBag.Title = "Заказ № " + Model.CompanyOrder.Id;

    @await Html.PartialAsync("_CompanyDetails", Model.CompanyOrder)
}
else if (Model.UserOrder != null)
{
  ViewBag.Title = "Заказ № " + Model.UserOrder.Id;

    @await Html.PartialAsync("_UserDetails", Model.UserOrder)
}

@section modals
{
    @await Html.PartialAsync("_approveModal")
}

@section scripts {
    <script>
        (function() {
            expandOrderItems(document);
        })();
    </script>
}
