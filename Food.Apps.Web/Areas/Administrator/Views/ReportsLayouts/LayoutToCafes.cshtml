@model List<ITWebNet.Food.Core.DataContracts.Manager.LayoutToCafeModel>
@{
        ViewBag.Title = $"Кафе использующие отчет {Model.FirstOrDefault().Xslt.Name}";

}
<div class="content main full-width">
    <div class="card">
        <div class="card-body">
            <div class="card-content">
                
                <h4>Кафе использующие отчет <strong>@Model.FirstOrDefault().Xslt.Name</strong></h4>
                
                <div class="row">
                    @Html.ActionLink("Назад к списку", "Index", "ReportsLayouts", null, new { @class = "btn btn-link" })
                </div>
                <div class="row">
                    @Html.RouteLink("Добавить", "AdministratorDefault", new { action = "AddCafe", controller = "ReportsLayouts", id = Model.FirstOrDefault().Xslt.Id }, new { @class = "btn btn-default" })
                </div>
                @if (Model.FirstOrDefault().Id != -1)
                {
                <table class="table table-bordered table-responsive" style="width: 60%;">
                    <thead>
                        <tr>
                            <th>
                                Ид <br /> кафе
                            </th>
                            <th>
                                Название кафе
                            </th>
                            <th>
                                Действия
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cafes in Model)
                        {
                        <tr>
                            <td>@cafes.CafeId</td>
                            <td>@cafes.CafeName</td>
                            <td>
                                <a href="@Url.RouteUrl("AdministratorDefault", new { controller = "ReportsLayouts", action = "DeleteCafe", id = cafes.Id })"
                                   class="btn btn-link">
                                    <i class="fa fa-remove text-danger"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                }
                else
                {
                    <p>@Model.FirstOrDefault().CafeName</p>
                }
            </div>
        </div>
    </div>
</div>

