@model IEnumerable<ITWebNet.Food.Core.DataContracts.Common.CompanyModel>

<table class="table">
    <tr>
        <th>
            Неактивные и удаленные компании
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Name
        </td>
        <td>
            @Html.ActionLink("Восстановить", "RestoreCompany", new { id=item.Id }, new { @class = "text-success" })
        </td>
    </tr>
}

</table>
