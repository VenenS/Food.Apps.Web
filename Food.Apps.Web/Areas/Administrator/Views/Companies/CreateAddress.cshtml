@model DeliveryAddressModel

@{
    ViewBag.Title = "Добавить адрес";
    var companyId = ViewBag.CompanyId ?? ViewContext.RouteData.Values["id"];
}

@using (Html.BeginForm("CreateAddress", "Companies", new { id = companyId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="content main full-width">
        <div class="card">
            <div class="card-body">
                <div class="card-content">
                    <div class="form-horizontal">
                        <h4>Добавить адрес доставки для компании</h4>
                        <hr/>
                        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                        <div class="row">
                            <div class="col-xs-6">
                                <h4 class="text-center">Полный адрес</h4>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.CityName, new {@class = "control-label col-md-3"})
                                    <div class="col-md-9">
                                        <input asp-for="CityName" class="form-control"/>
                                        @Html.ValidationMessageFor(model => model.CityName, "", new {@class = "text-danger"})
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.StreetName, new {@class = "control-label col-md-3"})
                                    <div class="col-md-9">
                                        <input asp-for="StreetName" class="form-control" />
                                        @Html.ValidationMessageFor(model => model.StreetName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.HouseNumber, new {@class = "control-label col-md-3"})
                                    <div class="col-md-9">
                                        <input asp-for="HouseNumber" class="form-control" />
                                        @Html.ValidationMessageFor(model => model.HouseNumber, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.BuildingNumber, new {@class = "control-label col-md-3"})
                                    <div class="col-md-9">
                                        <input asp-for="BuildingNumber" class="form-control" />
                                        @Html.ValidationMessageFor(model => model.BuildingNumber, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.OfficeNumber, new {@class = "control-label col-md-3"})
                                    <div class="col-md-9">
                                        <input asp-for="OfficeNumber" class="form-control" />
                                        @Html.ValidationMessageFor(model => model.OfficeNumber, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.PostalCode, new {@class = "control-label col-md-3"})
                                    <div class="col-md-9">
                                        <input asp-for="PostalCode" class="form-control" />
                                        @Html.ValidationMessageFor(model => model.PostalCode, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.AddressComment, new {@class = "control-label col-md-3"})
                                    <div class="col-md-9">
                                        <input asp-for="AddressComment" class="form-control" />
                                        @Html.ValidationMessageFor(model => model.AddressComment, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <h4 class="text-center">Отображаемый адрес</h4>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.RawAddress, new {@class = "control-label col-md-3"})
                                    <div class="col-md-9">
                                        <input asp-for="RawAddress" class="form-control" />
                                        @Html.ValidationMessageFor(model => model.RawAddress, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr/>
                        <div class="form-group">
                            @Html.LabelFor(model => model.DisplayType, new {@class = "control-label col-md-2"})
                            <div class="col-md-4">
                                <select asp-for="DisplayType" asp-items="@Html.GetEnumSelectList<DisplayAddressType>()" class="form-control"></select>
                                @Html.ValidationMessageFor(model => model.DisplayType, "", new {@class = "text-danger"})
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Добавить" class="btn btn-default"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.ActionLink("Назад к списку", "Edit", "Companies", new {id = companyId}, null)
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @await Html.PartialAsync("~/Views/Scripts/jqueryval.cshtml")
}