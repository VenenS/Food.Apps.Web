@model CompanyModel
@{
    ViewBag.Title = "Новая компания";
}
<div class="content main full-width">
    <div class="card">
        <div class="card-body">
            <div class="card-content">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Новая компания</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <label class="control-label col-md-2">Название</label>
                        <div class="col-md-3">
                            <input asp-for="Name" class="form-control" />
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Город</label>
                        <div class="col-md-3">
                                @Html.DropDownListFor(model => model.CityId,
                                    new SelectList(ViewBag.Cities, "Id", "Name"),
                                    "Выберите город из списка", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Создать" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                }
                <div>
                    @Html.ActionLink("Назад к списку", "Index")
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("~/Views/Scripts/jqueryval.cshtml")
}